<%- include("header") -%>

  <main role="main" class="inner cover">
    <img src="images/list.svg" alt="todo list">
    <h1 class="cover-heading">Things to do in
      <% if(day === 'Saturday' || day === 'Sunday') { %>
      <span style="color: Turquoise"><%= day %></span>
      <% } else { %>
      <span style="color: Red"><%= day %></span>
      <% } %>
    </h1>
    <div class="box text-left">
      <% for(var i = 0; i < list.length; i++) { %>
      <input class="checkbox" type="checkbox">
      <p><%= list[i] %></p>
      <br>
      <% } %>
    </div>
    <form action="<%= action %>" method="post">
      <input class="form-control form-control-lg" type="text" name="entry" placeholder="Add new event" autocomplete="off">
      <input class="btn btn-primary btn-dark btn-lg" type="submit" value="Submit">
    </form>
  </main>

<%- include("footer") -%>
